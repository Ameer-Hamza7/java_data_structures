import java.util.*;

public class ListImplementation {

	//	List Interface Implementation

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		System.out.println("================== Basic list Implementation =====================");

		List <Integer> list1 = List.of(1, 2, 3, 4, 5, 6, 7);
		System.out.println(list1);
		
		//		List : ArrayList, LinkedList, Vector, Stack
		
		System.out.println("================== Array list Implementation =====================");
		
		ArrayList <Integer> list2 = new ArrayList<Integer>();
		int i = 0;
		while(i < 10) {
			list2.add(i);
			i++;
		}
		System.out.print("ArrayList Generated By While Loop: ");
		System.out.println(list2);

		System.out.println("================== Linked list Implementation =====================");
		
		LinkedList <Integer> list3 = new LinkedList<Integer>();
		int j = 0;
		while(i < 10) {
			list3.add(i);
			i++;
		}
		System.out.print("LinkedList Generated By While Loop: ");
		System.out.println(list2);
		
		
		
	}
	
}
